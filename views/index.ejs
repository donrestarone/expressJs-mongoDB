<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- <link rel="stylesheet" type="text/css" media="screen" href="main.css" /> -->
    
    <script src="main.js"></script>
</head>
<body>
    <H1>I'am a humble to-do app</H1>
    <ul class="todos">
        <% for(var i=0; i<todos.length; i++) { %>
            <% if (todos[i].duetime != null) { %>
                <% var date = (todos[i].duetime).split('T')[0] %>
                <% var time = (todos[i].duetime).split('T')[1] %>
            <% } %>
            <li class="todo">
                <ul class="todo">
                    <li><%= todos[i].description %></li>
                    <% if (date != null && time != null) { %>
                        <li>Time: <%= time %></li>
                        <li>Date: <%= date %></li>
                    <% } %>
                    <button class="update">edit</button>
                    <button class="delete">delete</button>
                    <br>
                    <br>
                </ul>
            </li>
        <% } %>
    </ul>
    <form action="/todos" method="POST">
        <textarea rows = "5" cols = "50" name = "description"></textarea>
        <input type="datetime-local" placeholder="date/time" name="duetime" id="duetime">
        <button type="submit" id="submitButton">Submit</button>
    </form>

</body>
</html>